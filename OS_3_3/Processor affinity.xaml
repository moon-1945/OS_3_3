<Window x:Class="OS_3_3.Processor_affinity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OS_3_3"
        mc:Ignorable="d"
        Title="Processor_affinity" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Which processors are alowed to run"/>

        <ListBox x:Name="kernelsCheck" Grid.Row="1" Grid.Column="0" >
        </ListBox>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="1" Content="OK" Click="OK_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="Cancel" Click="Cancel_Click"/>

        </Grid>


    </Grid>
</Window>
